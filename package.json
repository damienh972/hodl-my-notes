{
  "name": "logbook-anchor",
  "version": "1.0.0",
  "description": "CLI interactive blockchain-based logbook with verifiable integrity",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest --config jest.config.ts --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint './*.ts' 'src/**/*.ts' --max-warnings=0",
    "lint:fix": "eslint './*.ts' 'src/**/*.ts' --fix",
    "format": "prettier --write './*.ts' 'src/**/*.ts'"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "adm-zip": "^0.5.14",
    "archiver": "^7.0.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.0",
    "js-sha256": "^0.11.0",
    "merkletreejs": "^0.4.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/archiver": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
